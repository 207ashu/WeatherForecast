<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    tools:context="com.example.ashu.weatherforecast.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="8">

       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="250dp"
           android:layout_marginEnd="6dp"
           android:layout_marginLeft="6dp"
           android:layout_marginRight="6dp"
           android:layout_marginStart="6dp" >


           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:clickable="true"
               android:scaleType="centerCrop"
               android:src="@drawable/weather" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="25dp"
               android:orientation="vertical"
               android:paddingBottom="10dp" >


               <TextView
                   android:id="@+id/currentTemp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="2753"
                   android:textColor="#000000"
                   android:textSize="48sp" />

               <TextView
                   android:id="@+id/currentCity"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Greater Noida | Haze"
                   android:textColor="#000000"
                   android:textSize="18sp" />


           </LinearLayout>

           <android.support.design.widget.FloatingActionButton
               android:id="@+id/floatingActionButton"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:layout_marginLeft="250dp"
               android:layout_marginStart="250dp"
               android:layout_marginTop="160dp"
               android:clickable="true"
               app:backgroundTint="?attr/colorPrimary"
               app:elevation="24dp"
               app:srcCompat="@android:drawable/ic_input_add" />



       </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginStart="6dp"
            android:layout_weight="3"
            android:background="#e0e0e0"
            android:orientation="vertical"
            android:weightSum="4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingBottom="10dp"
                android:paddingEnd="0dp"
                android:paddingLeft="50dp"
                android:paddingRight="0dp"
                android:paddingStart="50dp"
                android:paddingTop="25dp"
                android:text="Details"
                android:textColor="#000000"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="#e0e0e0"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/windHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="30dp"
                        android:text="Wind"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/windSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/windHeading"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginStart="22dp"
                        android:paddingLeft="5dp"
                        android:text="12.8 km/hr"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/windDirection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/windHeading"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/windSpeed"
                        android:layout_toRightOf="@id/windSpeed"
                        android:text="NW-NW"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/pressureHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingRight="15dp"
                        android:text="Pressure"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/pressureValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pressureHeading"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:paddingRight="15dp"
                        android:text="1234 hPa"
                        android:textColor="#000000"
                        android:textSize="18sp" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:weightSum="6">


                <TextView
                    android:id="@+id/visibilityHeading"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:paddingBottom="0dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:text="Visibility"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/visibility"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|center"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:text="00 km"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/uvIndexHeading"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical|center"
                    android:paddingBottom="0dp"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="0dp"
                    android:text="UV Index"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/uvIndex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:text="00"
                    android:textColor="#000000"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/humidityHeading"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="false"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:text="Relative Hiumidity"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentRight="false"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical|center"
                    android:paddingRight="30dp"
                    android:text="100 %"
                    android:textColor="#000000"
                    android:textSize="18sp" />


            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginStart="6dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="5" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#e0e0e0"
                android:orientation="horizontal"
                android:paddingBottom="4dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/day0"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Tomorrow"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/day0Condition"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Haze"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#ffffff">


                    <TextView
                        android:id="@+id/day0Temp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="right|center_vertical"
                        android:text="22.51c/07.81c"
                        android:textColor="#000000"
                        android:textSize="28sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#e0e0e0"
                android:orientation="horizontal"
                android:paddingBottom="4dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/day1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Tomorrow"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/day1Condition"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Haze"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#ffffff">


                    <TextView
                        android:id="@+id/day1Temp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="right|center_vertical"
                        android:text="TextView"
                        android:textColor="#000000"
                        android:textSize="28sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#e0e0e0"
                android:orientation="horizontal"
                android:paddingBottom="4dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/day2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Tomorrow"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/day2Condition"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Haze"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#ffffff">


                    <TextView
                        android:id="@+id/day2Temp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="right|center_vertical"
                        android:text="TextView"
                        android:textColor="#000000"
                        android:textSize="28sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#e0e0e0"
                android:orientation="horizontal"
                android:paddingBottom="4dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/day3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Tomorrow"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/day3Condition"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Haze"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#ffffff">


                    <TextView
                        android:id="@+id/day3Temp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="right|center_vertical"
                        android:text="TextView"
                        android:textColor="#000000"
                        android:textSize="28sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#e0e0e0"
                android:orientation="horizontal"
                android:paddingBottom="4dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/day4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Tomorrow"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/day4Condition"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Haze"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#ffffff">


                    <TextView
                        android:id="@+id/day4Temp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="right|center_vertical"
                        android:text="TextView"
                        android:textColor="#000000"
                        android:textSize="28sp" />

                </LinearLayout>

            </LinearLayout>





        </LinearLayout>


    </LinearLayout>

</ScrollView>
