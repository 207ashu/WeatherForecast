<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    tools:context="com.example.ashu.weatherforecast.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="8">

       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="250dp"
           android:layout_marginEnd="6dp"
           android:layout_marginLeft="6dp"
           android:layout_marginRight="6dp"
           android:layout_marginStart="6dp" >


           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:clickable="true"
               android:scaleType="centerCrop"
               android:src="@drawable/weather" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="25dp"
               android:orientation="vertical"
               android:paddingBottom="10dp" >


               <TextView
                   android:id="@+id/currentTemp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="2753"
                   android:textColor="#000000"
                   android:textSize="48sp" />

               <TextView
                   android:id="@+id/currentCity"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Greater Noida | Haze"
                   android:textColor="#000000"
                   android:textSize="18sp" />


           </LinearLayout>

           <android.support.design.widget.FloatingActionButton
               android:id="@+id/floatingActionButton"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:layout_marginLeft="250dp"
               android:layout_marginStart="250dp"
               android:layout_marginTop="160dp"
               android:clickable="true"
               app:backgroundTint="?attr/colorPrimary"
               app:elevation="24dp"
               app:srcCompat="@android:drawable/ic_input_add" />



       </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginStart="6dp"
            android:layout_weight="3"
            android:background="#e0e0e0"
            android:orientation="vertical"
            android:weightSum="4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingBottom="10dp"
                android:paddingEnd="0dp"
                android:paddingLeft="25dp"
                android:paddingRight="0dp"
                android:paddingStart="25dp"
                android:paddingTop="25dp"
                android:text="Details"
                android:textColor="#000000"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:weightSum="6">


                <TextView
                    android:id="@+id/maxTempHeading"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:paddingBottom="0dp"
                    android:paddingLeft="15dp"
                    android:paddingStart="15dp"
                    android:paddingTop="0dp"
                    android:text="Max Temp: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/maxTemp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:text="000 F"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/minTempHeading"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.8"
                    android:paddingBottom="0dp"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="0dp"
                    android:text="Min Temp: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/minTemp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:text="000 F"
                    android:textColor="#000000"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/humidityHeading"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="false"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:text="Relative Hiumidity"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentRight="false"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical|center"
                    android:paddingRight="30dp"
                    android:text="100 %"
                    android:textColor="#000000"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="#e0e0e0"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/windHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="30dp"
                        android:text="Wind"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/windSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/windHeading"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="45dp"
                        android:paddingLeft="15dp"
                        android:text="00 km/hr"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/windDirection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/windHeading"
                        android:layout_marginBottom="5dp"
                        android:layout_toEndOf="@id/windSpeed"
                        android:layout_toRightOf="@id/windSpeed"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:text="NW"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/pressureHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingRight="15dp"
                        android:text="Pressure"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/pressureValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pressureHeading"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:paddingRight="15dp"
                        android:text="1234 hPa"
                        android:textColor="#000000"
                        android:textSize="18sp" />


                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginStart="6dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="5" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#e0e0e0"
                android:paddingBottom="4dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:background="#ffffff"
                    android:text="Day2" >

                    <TextView
                        android:id="@+id/day2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="4dp"
                        android:text="19-01-2018"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/day2Condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/day2"
                        android:layout_marginLeft="45dp"
                        android:layout_marginStart="45dp"
                        android:text="Haze"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/day2MaxTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="43dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/day2"
                        android:text="00/"
                        android:textColor="#000000"
                        android:textSize="46sp" />

                    <TextView
                        android:id="@+id/day2MinTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/day2MaxTemp"
                        android:text="00"
                        android:textColor="#000000"
                        android:textSize="46sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#e0e0e0"
                android:paddingBottom="4dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:background="#ffffff"
                    android:text="Day3" >

                    <TextView
                        android:id="@+id/day3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="4dp"
                        android:text="19-01-2018"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/day3Condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/day3"
                        android:layout_marginLeft="45dp"
                        android:layout_marginStart="45dp"
                        android:text="Haze"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/day3MaxTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="43dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/day3"
                        android:text="00/"
                        android:textColor="#000000"
                        android:textSize="46sp" />

                    <TextView
                        android:id="@+id/day3MinTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/day3MaxTemp"
                        android:text="00"
                        android:textColor="#000000"
                        android:textSize="46sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#e0e0e0"
                android:paddingBottom="4dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:background="#ffffff"
                    android:text="Day4" >

                    <TextView
                        android:id="@+id/day4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="4dp"
                        android:text="19-01-2018"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/day4Condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/day4"
                        android:layout_marginLeft="45dp"
                        android:layout_marginStart="45dp"
                        android:text="Haze"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/day4MaxTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="43dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/day4"
                        android:text="00/"
                        android:textColor="#000000"
                        android:textSize="46sp" />

                    <TextView
                        android:id="@+id/day4MinTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/day4MaxTemp"
                        android:text="00"
                        android:textColor="#000000"
                        android:textSize="46sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#e0e0e0"
                android:paddingBottom="4dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:background="#ffffff"
                    android:text="Day5" >

                    <TextView
                        android:id="@+id/day5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="4dp"
                        android:text="19-01-2018"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/day5Condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/day5"
                        android:layout_marginLeft="45dp"
                        android:layout_marginStart="45dp"
                        android:text="Haze"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/day5MaxTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="43dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/day5"
                        android:text="00/"
                        android:textColor="#000000"
                        android:textSize="46sp" />

                    <TextView
                        android:id="@+id/day5MinTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/day5MaxTemp"
                        android:text="00"
                        android:textColor="#000000"
                        android:textSize="46sp" />

                </RelativeLayout>

            </LinearLayout>





        </LinearLayout>


    </LinearLayout>

</ScrollView>
